      num1 = list_var[1] / list_var[2]
      return num1
    elif list_var[0] == "+":
      num1 = list_var[1] + list_var[2]
      return num1
    elif list_var[0] == "-":
      num1 = list_var[1] - list_var[2]
      return num1
    else:
      print("Введенный математический символ не верен")

  except ZeroDivisionError: 
